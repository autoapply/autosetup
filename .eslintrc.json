{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "max-len": ["error", 80],
    "semi": "error",
    "no-tabs": "error",
    "no-console": "error",
    "no-constant-condition": "off",
    "require-await": "error"
  }
}
