{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "git": {
      "type": "object",
      "additionalProperties": false,
      "default": {},
      "properties": {
        "url": {
          "type": "string"
        },
        "branch": {
          "type": "string",
          "default": ""
        },
        "args": {
          "type": "string",
          "default": "--depth 1 --single-branch"
        }
      }
    },
    "secrets": {
      "type": "object",
      "additionalProperties": false,
      "default": {},
      "properties": {
        "ssh": {
          "type": "string",
          "default": ""
        },
        "ssh-host-key": {
          "type": "string",
          "default": ""
        },
        "docker": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["server", "username", "password"],
            "properties": {
              "server": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "email": {
                "type": "string"
              }
            }
          }
        },
        "dockercfg": {
          "type": "string"
        },
        "yaml-crypt": {
          "type": "array",
          "default": [],
          "items": { "type": "string" }
        },
        "sops": {
          "type": "object",
          "default": {},
          "propertyNames": {
            "pattern": "^[A-Za-z0-9_]+$"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "gpg": {
          "type": "string",
          "default": ""
        },
        "others": {
          "type": "object",
          "default": {},
          "propertyNames": {
            "pattern": "^[A-Za-z0-9_]+$"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "paths": {
          "type": "array",
          "minItems": 1,
          "default": ["."],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "kubernetes": {
      "type": "object",
      "additionalProperties": false,
      "default": {},
      "properties": {
        "labels": {
          "type": "object",
          "default": {},
          "propertyNames": {
            "pattern": "^[A-Za-z0-9-]+$"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "namespace": {
          "type": "string",
          "default": "default"
        },
        "resources": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "memory": {
              "type": "string",
              "default": ""
            },
            "cpu": {
              "type": "string",
              "default": ""
            }
          },
          "default": {}
        },
        "namespace-access": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cluster-admin": {
          "type": "boolean",
          "default": false
        },
        "paths": {
          "type": "array",
          "minItems": 1,
          "default": ["."],
          "items": {
            "type": "string"
          }
        },
        "recursive": {
          "type": "boolean",
          "default": false
        },
        "kustomize": {
          "type": "boolean",
          "default": false
        },
        "prune": {
          "type": "boolean",
          "default": true
        },
        "prune-allowlist": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "core/v1/ConfigMap",
            "core/v1/Endpoints",
            "core/v1/PersistentVolumeClaim",
            "core/v1/Pod",
            "core/v1/ReplicationController",
            "core/v1/Secret",
            "core/v1/Service",
            "batch/v1/Job",
            "batch/v1/CronJob",
            "networking.k8s.io/v1/Ingress",
            "apps/v1/DaemonSet",
            "apps/v1/ReplicaSet",
            "apps/v1/StatefulSet",
            "apps/v1/Deployment"
          ]
        },
        "tolerations": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "autoapply": {
      "type": "object",
      "additionalProperties": false,
      "default": {},
      "properties": {
        "image": {
          "type": "string",
          "default": "autoapply/autoapply:0.20.0-kubectl"
        },
        "sleep": {
          "type": "integer",
          "minimum": 0,
          "default": 30
        },
        "config": {
          "anyOf": [{ "type": "string" }, { "type": "object" }]
        },
        "init": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["$write-ssh-keys", "$import-gpg-keys"]
        },
        "commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "$git-clone",
            "$yaml-crypt-decrypt",
            "$sops-decrypt",
            "$kubectl-apply"
          ]
        }
      }
    }
  }
}
